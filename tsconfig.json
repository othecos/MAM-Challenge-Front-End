{
	"compilerOptions": {
		"target": "es5",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": false,
		"forceConsistentCasingInFileNames": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "commonjs",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"baseUrl": ".",
		"paths": {
			"@components/*": ["./src/components/*"],
			"@config/*": ["./src/config/*"],
			"@hooks/*": ["./src/hooks/*"],
			"@interfaces/*": ["./src/interfaces/*"],
			"@layout/*": ["./src/layout/*"],
			"@models/*": ["./src/models/*"],
			"@pages/*": ["./src/pages/*"],
			"@services/*": ["./src/services/*"],
			"@styles/*": ["./src/styles/*"],
			"@utils/*": ["./src/utils/*"],
			"@tests/*": ["./tests/*"]
		}
	},
	"include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "src/pages/_app.tx"],
	"exclude": ["node_modules"]
}
